<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.editpart.widget.MyRelativeLayout
        android:id="@+id/id_rela"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />




    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/gray"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:onClick="finishPaint"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:src="@drawable/ic_baseline_text_fields_24"
                android:onClick="btnClickHint"/>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:src="@drawable/ic_baseline_image_search_24"
                android:onClick="btnClickImport"/>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:src="@drawable/ic_baseline_file_download_24"
                android:onClick="btnClickSave"/>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
